<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFCC"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucst.philanthropic.Orphange" >

    <Button
        android:id="@+id/btnYan"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="ရန္တိုင္းေအာင္" 
        android:textSize="20dp"
        android:background="@layout/roundbutton"/>

    <Button
        android:id="@+id/btnOpendoor"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Open door" 
        android:textSize="20dp"
        android:background="@layout/roundbutton"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnMind"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="စိတၱသုခ"
        android:textSize="20dp"
        android:background="@layout/roundbutton" 
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSanLa"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="စမ္းလမာ" 
        android:textSize="20dp"
        android:background="@layout/roundbutton"
        android:layout_marginTop="10dp"/>
    
  
  
    
</LinearLayout>

