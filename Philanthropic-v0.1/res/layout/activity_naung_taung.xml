
<ScrollView
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CCFFCC" 
    android:fillViewport="true">
   
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        
        <TextView
            android:id="@+id/txtn0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ေနာင္ေတာင္းပရဟိတတပ္ဦးဘုန္းေတာ္ျကီးသင္ေက်ာင္း"
            android:textSize="25dp" 
            android:textColor="#000000"
            android:layout_gravity="center"/>
        
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:src="@drawable/ho1"
        android:layout_marginTop="10dp"
      />
        

       
        <TextView
            android:id="@+id/txtn1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:text="ေနာင္ေတာင္းပရဟိတတပ္ဦးဘုန္းေတာ္ျကီးသင္ေက်ာင္းကိုေနာင္ေတာင္းဆရာေတာ္သည္၂၀၀၁ခုႏွစ္တြင္တည္ေထာင္ခဲ့သည္။ယခုအခ်ိန္တြင္လည္းေနာင္ေတာင္းဆရာေတာ္ဦးစီးေနသည္။လူဦးေရစုစုေပါင္း(၂၃၆၀)ေယာက္ရွိသည္။" />

      
         <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       android:layout_marginLeft="16dp"
       android:layout_marginRight="16dp"
        
         >
         
        <TextView
            android:id="@+id/txtn2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="ပညာသင္ျကာေနသူမ်ား" 
             android:layout_gravity="center"
             android:textColor="#000000"
             android:layout_marginTop="10dp"/>
        
         <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
         >
        <TextView
            android:id="@+id/txtn3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="ကိုရင္၊သီလရွင္ႏွင္႔က်ာင္းသားေက်ာင္းသူ(၂၃၆၀)ေယာက္္္တို႕ကိုပညာသင္ျကားေပးေနသည္။" 
             android:layout_gravity="center"/>
        </LinearLayout>
        </LinearLayout>
     
         
         <TextView
            android:id="@+id/txtn4"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:text="လုပ္ရွားမႈပံုရိပ္မ်ား" 
             />
         
      <RelativeLayout 
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
>

 

<android.support.v4.view.ViewPager
android:id="@+id/viewPager"
android:layout_width="350dp"
android:layout_height="200dp"
android:layout_marginBottom="8dp"/>

 <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sliderdot"
        android:layout_below="@+id/viewPager"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
         >
</LinearLayout>
</RelativeLayout>
       
        
        <TextView
            android:id="@+id/txtn6"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:text="လုပ္ငန္းစဥ္မ်ား"
            android:textSize="20dp" 
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

       
        <TextView
            android:id="@+id/txtn7"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="ကေလးမ်ား၏ပညာေရးကိုအဓိကေဆာင္ရြက္ေပးလ်က္ရွိသည္။" />

         
        <TextView
            android:id="@+id/txtn8"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:text="လိုအပ္ခ်က္မ်ားႏွင္႔လွဴဒါန္းနိုင္ေသာပစၥည္းမ်ား"
            android:textSize="20dp" 
            android:textColor="#000000"
            android:layout_gravity="center"/>

       
        <TextView
            android:id="@+id/txtn9"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:text="လူဦးေရမ်ားျပားေသာေျကာင္႔အိပ္ေဆာင္မ်ားလိုအပ္ပါသည္။စာေရးကိရိယာမ်ား၊ဆန္၊ဆီ၊ဆား၊ေဆးတစ္နပ္စာအာဟာရအတြက္အလွဴရွင္မ်ားတက္နိုင္သေလာက္ေကြ်းေမြးနိုင္သည္။" />
        
         <TextView
            android:id="@+id/txtn10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:text="ေနရပ္လိပ္စာ-ဟိုပံုးျမိဳ့၊ေနာင္ေတာင္းပရဟိတတပ္ဦးဘုန္းေတာ္ျကီးသင္ေက်ာင္း၊ဖုန္း-၀၉၄၂၈၃၃၁၇၀၀"
            
           />
         
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
         >  

    <ImageView
        android:id="@+id/phone"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/ph" />

    <ImageView
        android:id="@+id/message"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/text" />

     </LinearLayout>
        

    </LinearLayout>
   

</ScrollView>