<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCFFCC"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ucst.philanthropic.Orphange" >

    <Button
        android:id="@+id/btnNat"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="နတ္ေတာမိဘမဲ့ေက်ာင္း" 
        android:background="@layout/roundbutton"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btnThan"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="သံသာတေရးဏမိဘမဲ့ေက်ာင္း" 
        android:textSize="20dp"
        android:background="@layout/roundbutton"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSai"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="ဆိုင္ခြန္ေတာင္မိဘမဲ့ေက်ာင္း"
        android:background="@layout/roundbutton" 
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnLagyi"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="လက်ီႏြဲ့မိဘမဲ့ေက်ာင္း" 
        android:background="@layout/roundbutton"
        android:layout_marginTop="10dp"/>
    
    
    <Button
        android:id="@+id/btnSalin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="စလင္းမိဘမဲ့ေက်ာင္း" 
        android:textSize="20dp"
        android:background="@layout/roundbutton"
        android:layout_marginTop="10dp"/>
    

    
</LinearLayout>

